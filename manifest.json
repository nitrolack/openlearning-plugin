{
  "manifest_version": 3,
  "name": "OpenLearning for OpenGuessr",
  "description": "Displays custom learning hints and metadata for OpenGuessr maps via GitHub-hosted datasets.",
  "version": "1.0.0",

  "permissions": ["storage"],

  "host_permissions": [
    "https://*.openguessr.com/*",
    "https://nitrolack.github.io/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://openguessr.com/*",
        "https://www.openguessr.com/*"
      ],
      "js": [
        "overlay/overlay.js",
        "content/content.js"
      ],
      "css": [
        "overlay/overlay.css"
      ]
    }
  ]
}